<html>
    <head>
        <script type = "text/javascript">
            function a(){
                alert("This is an alert box.")
            }
            
            function printMyName(){
             document.write(name);   
            }
            
            function mathOps(){
                document.write("Add = " + (num1 + num2));
                document.write("Multiply = " + (num1 * num2));
                document.write("Divide = " + (num1 / num2));
                document.write("Remainder = " + (num1 % num2));
            }
            
        </script>
        
        <!--<script type = "text/javascript" src = "javascript.js"></script>//-->
    </head>
    
    <body>
        <script>
            //String declarations
            var name = "Cameron"; 
            //Number declarations
            var num1 = Math.random();
            var num2 = Math.random();
        </script>
        <p>Here are some buttons, connected to functions</p>
        <input type = "button" onclick = "a();" value = "Alert"/>
        <input type = "button" onclick = "printMyName();" value = "Print"/>
        <input type = "button" onclick = "mathOps();" value = "Math"/>
    </body>
</html>
